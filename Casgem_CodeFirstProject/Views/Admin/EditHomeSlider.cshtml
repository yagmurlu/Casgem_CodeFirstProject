@model Casgem_CodeFirstProject.DAL.Entities.Slider
@{
    ViewBag.Title = "EditHomeSlider";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Slider Düzenleme Sayfası</h2>

<form method="post">
    @Html.HiddenFor(x => x.SliderId)
    <label>Başlık-1</label>
    @Html.TextBoxFor(x => x.SliderTitle, new { @class = "form-control" })
    <br />
    <label>Başlık-2</label>
    @Html.TextBoxFor(x => x.SliderTitle2, new { @class = "form-control" })
    <br />
    <label>Açıklama</label>
    @Html.TextBoxFor(x => x.SliderDescription, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Kaydet</button>
</form>
